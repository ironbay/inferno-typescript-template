{
	"compileOnSave": false,
	"compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "target": "es5",
        "moduleResolution": "node",
        "jsx": "react",
        "jsxFactory": "createElement",
		"sourceMap": true,
		"lib": ["dom","es5","scripthost", "es2015.promise", "es2015.collection"]
	},
    "include": [
        "src/**/*",
		"node_modules/@types"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
